.contents-left
  .contents-left__user
    = current_user.name
    .contents-left__user__btn
      %button
        = link_to edit_user_path(current_user) do
          = fa_icon "edit"   
      %button
        = link_to new_group_path do
          = fa_icon "gear"  
  .contents-left__group 
    - current_user.groups.each do |group|
      = link_to group_chats_path(group) do
        .contents-left__group__name
          =group.name
        .contents-left__group__message
          = group.show_last_chat